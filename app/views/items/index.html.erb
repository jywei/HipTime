


<% if user_signed_in? %>
  <div class="col-md-10 col-md-offset-1">
    <% @items.each do |item| %>
      <div class="index-wrapper">

        <% if item.completed? %>
          <div class="row item">

            <div class="col-md-2">
              <p><%= link_to complete_item_path(item), method: :patch do %></p>
                <i class="fa fa-check fa-4x"></i>
              <% end %>
            </div>

            <div class="col-md-2">
              <p><%= link_to item, method: :delete, data: { confirm: "Are you sure?" } do %></p>
                <i class="fa fa-trash fa-4x"></i>
              <% end %>
            </div>

            <div class="col-md-8">
              <h2 style="opacity: 0.5;" class="item-title">
                <strike><%= link_to item.title, item %></strike>
              </h2>
              <p style="opacity: 0.5;" class="item-sub-title item-desc">
                <strike><%= item.description %></strike>
              </p>
              <p style="opacity: 0.5;" class="item-sub-title item-created-at">
                <strong>Completed <%= time_ago_in_words(item.completed_at) %> ago</strong>
              </p>
            </div>

          </div>

        <% else %>

          <div class="row item">

            <div class="col-md-2">
              <p><%= link_to complete_item_path(item), method: :patch do %></p>
                <i class="fa fa-check fa-4x"></i>
              <% end %>
            </div>

            <div class="col-md-8">
              <h2 class="item_title"><%= link_to item.title, item %></h2>
              <p class="item-sub-title item-desc"><%= item.description %></p>
              <p style="opacity: 0.5;" class="item-sub-title item-created-at">
                Created <%= time_ago_in_words(item.created_at) %> ago
              </p>
            </div>

            <div class="col-md-2">
              <p><%= link_to item, method: :delete, data: { confirm: "Are you sure?" } do %></p>
                <i class="fa fa-trash fa-4x"></i>
              <% end %>
            </div>

          </div>

        <% end %>
      </div>
    <% end %>
  </div>

<% else %>
  <%= render 'welcome_page' %>
<% end %>

